<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <TextView
            android:id = "@+id/displayExperimentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "10sp"
            />

    <TextView
            android:id = "@+id/displayPatientID"
            android:layout_below="@+id/displayExperimentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize = "10sp"
            android:layout_marginBottom = "10dp"
            />



    <TableLayout
            android:id="@+id/connections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





        <TableRow style="@style/tableRow">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp"
                    android:text="Connect BodyMedia"
                    android:layout_marginEnd="30dp"/>

            <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/streamRecordBodymediaON"
                    android:text="On"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_gravity="left"/>
            <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/streamRecordBodymediaOFF"
                    android:text="Off"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_gravity="left"/>
        </TableRow>


        <TableRow style="@style/tableRow">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp"
                    android:text="Connect Zephyr"
                    android:layout_marginEnd="30dp"/>

            <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/zephyrON"
                    android:text="On"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_gravity="left"/>
            <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/zephyrOFF"
                    android:text="Off"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_gravity="left"/>
        </TableRow>

        <TableRow style="@style/tableRow">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp"
                    android:text="Connect Dexcom"
                    android:layout_marginEnd="30dp"/>

            <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/dexcomON"
                    android:text="On"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_gravity="left"/>
            <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:id="@+id/dexcomOFF"
                    android:text="Off"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_gravity="left"/>
        </TableRow>

    </TableLayout>

    <EditText
            android:id="@+id/labelHeartRate"
            android:layout_below="@+id/connections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/HRTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connections"
            android:text="@string/labelHeartRate"
            android:textSize = "10sp"
            />
    <TextView
            android:id = "@+id/RespirationRate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelHeartRate"
            android:text="@string/labelRespRate"
            android:textSize = "10sp"            />
    <EditText
            android:id="@+id/labelRespRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelHeartRate"
            android:layout_alignParentRight="true"></EditText>


    <TextView
            android:id = "@+id/Posture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelRespRate"
            android:text="@string/labelPosture"
            android:textSize = "10sp"            />

    <EditText
            android:id="@+id/labelPosture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelRespRate"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/PeakAcc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelPosture"
            android:text="@string/labelPeakAcc"
            android:textSize = "10sp"            />

    <EditText
            android:id="@+id/labelPeakAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelPosture"
            android:layout_alignParentRight="true"></EditText>



    <TextView
            android:id = "@+id/Activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelPeakAcc"
            android:text="Activity"
            android:textSize = "10sp"            />
    <EditText
            android:id="@+id/labelActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelPeakAcc"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/ActType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelActivity"
            android:text="Type"
            android:textSize = "10sp"            />

    <EditText
            android:id="@+id/labelActType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelActivity"
            android:layout_alignParentRight="true"></EditText>


    <TextView
        android:id = "@+id/Temperature"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelActType"
        android:text="Temperature"
        android:textSize = "10sp"        />

    <EditText
            android:id="@+id/labelTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelActType"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/Calories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelTemperature"
            android:text="Calories"
            android:textSize = "10sp"            />

    <EditText
            android:id="@+id/labelCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelTemperature"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/Glucose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelCalories"
            android:text="Glucose"
            android:textSize = "10sp"            />

    <EditText
            android:id="@+id/labelGlucose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textSize = "10sp"
            android:layout_below="@+id/labelCalories"
            android:layout_alignParentRight="true"></EditText>
    <TextView
            android:id = "@+id/StatusTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelGlucose"
            android:text="Status: "
            android:textSize = "20sp"
            />

    <EditText
            android:id="@+id/labelStatusMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Message Box"
            android:layout_below="@+id/labelGlucose"
            android:layout_alignParentRight="true"></EditText>



</RelativeLayout><!-- From: file:/C:/Users/Caterina/Documents/IIT/PhD%20Research/Trabajo/Android/gecko-mobile-client/gecko-mobile-client/res/layout/multiple.xml -->