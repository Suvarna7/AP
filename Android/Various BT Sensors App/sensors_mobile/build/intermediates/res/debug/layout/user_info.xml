<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/defaultLayout">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Mass"
                android:labelFor="@+id/mass_in_kg"
                android:layout_marginEnd="50dp"/>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:layout_weight="0.5"
			    android:orientation="horizontal">
			    <EditText
	                android:id="@+id/mass_in_kg"
	                android:inputType="number"
	                android:text="80"
	                android:hint="Kg"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:layout_width="0dp"/>
			    <TextView
	                android:textColor="@android:color/holo_blue_dark"
	                android:textSize="16dp"
	                android:text="kg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
			</LinearLayout>
            
        </TableRow>
		<TableRow style="@style/tableRow">

            <View
                android:layout_marginEnd="50dp"/>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:layout_weight="0.5"
			    android:orientation="horizontal">
			    <EditText
	                android:id="@+id/mass_in_lbs"
	                android:inputType="number"
	                android:text="176"
	                android:hint="lbs"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:layout_width="0dp"/>
			    <TextView
	                android:textColor="@android:color/holo_blue_dark"
	                android:textSize="16dp"
	                android:text="lbs"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
			</LinearLayout>

        </TableRow>

		<TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Height"
                android:labelFor="@+id/height_in_cm"/>

			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:layout_weight="0.4"
			    android:orientation="horizontal">
			    <EditText
	                android:id="@+id/height_in_cm"
	                android:inputType="number"
	                android:text="180"
	                android:hint="Cm"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:layout_width="0dp"/>
			    <TextView
	                android:textColor="@android:color/holo_blue_dark"
	                android:textSize="16dp"
	                android:text="cm"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
			</LinearLayout>

        </TableRow>
        <TableRow style="@style/tableRow">

            <View
                android:labelFor="@+id/height_in_inch"/>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
                android:layout_weight="0.4"
			    android:orientation="horizontal">
			    <EditText
	                android:id="@+id/height_in_inch"
	                android:inputType="number"
	                android:text="71"
	                android:hint="Inch"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:layout_width="0dp"/>
			    <TextView
	                android:textColor="@android:color/holo_blue_dark"
	                android:textSize="16dp"
	                android:text="inch"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
			</LinearLayout>
            
        </TableRow>
        <TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Gender"
                android:labelFor="@+id/genderRadioGroup"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/genderRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/maleRadioButton"
                    android:layout_column="1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/femaleRadioButton"
                    android:layout_column="2"/>
            </RadioGroup>
        </TableRow>

        <TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Handed"
                android:labelFor="@+id/handedRadioGroup"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/handedRadioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:id="@+id/leftRadioButton"
                    android:layout_column="1"
                    android:layout_marginRight="9dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right"
                    android:id="@+id/rightRadioButton"
                    android:layout_column="2"/>
            </RadioGroup>
        </TableRow>

        <TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Smoker"
                android:labelFor="@+id/smokerToggleButton"/>

            <Switch
                android:id="@+id/smokerToggleButton"
                android:textOn="Yes"
                android:textOff="No"
                android:layout_gravity="left"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Off-body"
                android:labelFor="@+id/offBodyEstimatesToggleButton"/>

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/offBodyEstimatesToggleButton"
                android:textOn="Yes"
                android:textOff="No"
                android:layout_gravity="left"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="ECG"
                android:labelFor="@+id/enableECGToggleButton"/>

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/enableECGToggleButton"
                android:textOn="Yes"
                android:textOff="No"
                android:layout_gravity="left"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Always On"
                android:labelFor="@+id/enableAlwaysOnToggleButton"/>

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/enableAlwaysOnToggleButton"
                android:textOn="Yes"
                android:textOff="No"
                android:layout_gravity="left"/>
        </TableRow>

        <TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Day Wrap"/>

            <EditText
                android:id="@+id/day_wrap"
                android:inputType="numberSigned"
                android:text="0"
                android:hint="@string/minutes_hint"
                android:layout_weight="0.4"/>
        </TableRow>

        <TableRow style="@style/tableRow">

            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Sleep Wrap"/>

            <EditText
                android:id="@+id/sleep_wrap"
                android:inputType="numberSigned"
                android:text="0"
                android:hint="@string/minutes_hint"
                android:layout_weight="0.4"/>

        </TableRow>
        
        <TableRow style="@style/tableRow"
            android:visibility="gone">
            
            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="@string/device_time"/>
            
            <Button 
                android:id="@+id/setDeviceTimeBtn"
                android:text="@string/press_to_set_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            
        </TableRow>

        <TableRow style="@style/tableRow">
            <TextView
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                android:text="Birthday"
                android:labelFor="@+id/birthdayPicker"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center">
            <DatePicker
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/birthdayPicker"
                android:calendarViewShown="false"
                android:startYear="1900"
                android:endYear="2000"
                android:paddingBottom="10dp"/>
        </TableRow>
    </TableLayout>
</ScrollView>
