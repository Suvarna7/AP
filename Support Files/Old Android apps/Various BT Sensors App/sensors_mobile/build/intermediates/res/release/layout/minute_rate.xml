<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF000000"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow style="@style/tableRow">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:text="Update Minute"
                android:layout_marginEnd="30dp"/>

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/updateMinuteSwitch"
                android:textOn="On"
                android:textOff="Off"
                android:layout_gravity="left"/>
        </TableRow>
        <TableRow style="@style/tableRow">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:text="Update High"
                android:layout_marginEnd="30dp"/>

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/updateHighSwitch"
                android:textOn="On"
                android:textOff="Off"
                android:layout_gravity="left"/>
        </TableRow>
        <TableRow style="@style/tableRow">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                android:text="Update Cumulative"
                android:layout_marginEnd="30dp"/>

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/updateCumulativeSwitch"
                android:textOn="On"
                android:textOff="Off"
                android:layout_gravity="left"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp"
                    android:text="Streaming record"
                    android:layout_marginEnd="30dp"/>
            <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/streamRecordBodymediaON"
                    android:text="On"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_gravity="left"/>
            <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/streamRecordBodymediaOFF"
                    android:text="Off"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:layout_gravity="left"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="20sp"
                    android:text="Send Database"
                    android:layout_marginEnd="30dp"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/sendBodymedia"

                    android:layout_gravity="left"/>
        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideInset"
        android:id="@+id/scrollView"
        android:scrollbars="vertical"
        android:background="#fff"
        android:layout_marginTop="7dp">

        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:id="@+id/logTextView"
            android:textColor="#000"
            android:singleLine="false"/>

    </ScrollView>

</LinearLayout><!-- From: file:/C:/Users/Caterina/Documents/IIT/PhD%20Research/Trabajo/Android/gecko-mobile-client/gecko-mobile-client/res/layout/minute_rate.xml -->