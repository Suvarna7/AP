<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.virginia.dtc.RocheDriver"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <permission android:name="edu.read" />
    <permission android:name="edu.write" />

    <uses-permission android:name="edu.read" />
    <uses-permission android:name="edu.write" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- Meta-data Tags used by DiAs Software to determine functionality of driver -->
        <meta-data
            android:name="driver_pump"
            android:value="true" />
        <meta-data
            android:name="driver_cgm"
            android:value="false" />
        <meta-data
            android:name="driver_name"
            android:value="Roche" />
        <meta-data
            android:name="driver_displayname"
            android:value="Roche Accu-Chek" />
        <meta-data
            android:name="driver_service"
            android:value="edu.virginia.dtc.RocheDriver.RocheDriver" />
        <meta-data
            android:name="supports_speedup"
            android:value="false" />
        <meta-data
            android:name="supports_multi"
            android:value="false" />

        <activity
            android:name="edu.virginia.dtc.RocheDriver.RocheUI"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Roche UI"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="edu.virginia.dtc.RocheDriver.RocheDriver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="Driver.Pump.Roche" />
                <action android:name="Driver.UI.Roche" />
            </intent-filter>
        </service>

        <meta-data
            android:name="Version"
            android:value="$Rev: 2410 $*" />
    </application>

</manifest>