<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <TextView
            android:id = "@+id/displayExperimentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize = "20sp"
            />

    <TextView
            android:id = "@+id/displayPatientID"
            android:layout_below="@+id/displayExperimentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize = "20sp"
            android:layout_marginBottom = "20dp"
            />



    <TextView
            android:id = "@+id/displayZephyrUsed"
            android:layout_alignTop="@id/displayPatientID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize = "20sp"

            />

    <Button android:text="Connect"
            android:id="@+id/ButtonConnect"
            android:layout_below="@+id/displayPatientID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Button>

    <Button android:text="Disconnect"
            android:id="@+id/ButtonDisconnect"
            android:layout_toEndOf="@id/ButtonConnect"
            android:layout_alignTop="@id/ButtonConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Button>



    <EditText
            android:id="@+id/labelHeartRate"
            android:layout_below="@+id/ButtonConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/HRTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ButtonConnect"
            android:text="@string/labelHeartRate"
            android:textSize = "20sp"
            />
    <TextView
            android:id = "@+id/RespirationRate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelHeartRate"
            android:text="@string/labelRespRate"
            android:textSize = "20sp"
            />
    <EditText
            android:id="@+id/labelRespRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_below="@+id/labelHeartRate"
            android:layout_alignParentRight="true"></EditText>


    <TextView
            android:id = "@+id/Posture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelRespRate"
            android:text="@string/labelPosture"
            android:textSize = "20sp"
            />

    <EditText
            android:id="@+id/labelPosture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_below="@+id/labelRespRate"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/PeakAcc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelPosture"
            android:text="@string/labelPeakAcc"
            android:textSize = "20sp"
            />

    <EditText
            android:id="@+id/labelPeakAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_below="@+id/labelPosture"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/VMU"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelPeakAcc"
            android:text="VMU"
            android:textSize = "20sp"
            />
    <EditText
            android:id="@+id/labelVMU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_below="@+id/labelPeakAcc"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/Activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelVMU"
            android:text="Activity"
            android:textSize = "20sp"
            />
    <EditText
            android:id="@+id/labelActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_below="@+id/labelVMU"
            android:layout_alignParentRight="true"></EditText>

    <TextView
            android:id = "@+id/StatusTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelActivity"
            android:text="Status Message"
            android:textSize = "20sp"
            />
    <EditText
            android:id="@+id/labelStatusMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Message Box"
            android:layout_below="@+id/StatusTextBox"
            android:layout_alignParentLeft="true"></EditText>

    <Button android:text="Save"
            android:id="@+id/ButtonDBSave"
            android:layout_below="@+id/labelStatusMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    <Button android:text="Send"
            android:id="@+id/ButtonDBSend"
            android:layout_toEndOf="@id/ButtonDBSave"
            android:layout_alignTop="@id/ButtonDBSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    <Button android:text="Plot"
            android:id="@+id/ButtonPlot"
            android:layout_toEndOf="@id/ButtonDBSend"
            android:layout_alignTop="@id/ButtonDBSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>




</RelativeLayout><!-- From: file:/C:/Users/Cat/Dropbox/ECE_PhD%20Research/Artifitial%20Pancreas%20Work/Dias/BodyMedia%20App/Previous%20Versions/sensors_mobile/res/layout/main_zephyr.xml -->